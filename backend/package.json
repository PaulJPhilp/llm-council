{
  "name": "ensemble-backend",
  "version": "1.0.0",
  "description": "Ensemble - Multi-Model AI Deliberation System",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "dev": "bun --watch src/server.ts",
    "start": "bun src/server.ts",
    "start:prod": "bun run build && bun run dist/server.js",
    "build": "bun run build:tsc",
    "build:tsc": "bun x tsc",
    "test": "bun test",
    "test:run": "bun test --run",
    "test:ui": "bun x vitest --ui",
    "test:coverage": "bun test --coverage",
    "typecheck": "bun x tsc --noEmit",
    "lint": "bun x ultracite check",
    "lint:fix": "bun x ultracite fix",
    "format": "bun x ultracite fix",
    "prepare": "bun x husky"
  },
  "dependencies": {
    "@effect/platform": "^0.73.0",
    "@effect/platform-node": "^0.73.0",
    "dotenv": "^16.6.1",
    "effect": "^3.8.0",
    "hono": "^4.10.6",
    "liquidjs": "^10.24.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.7",
    "@types/bun": "^1.1.15",
    "@types/node": "^20.19.25",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "ultracite": "^6.3.6",
    "vitest": "^1.6.1"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
