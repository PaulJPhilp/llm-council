{
  "name": "llm-council-backend",
  "version": "1.0.0",
  "description": "LLM Council - TypeScript backend",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "dev": "bunx tsx watch src/main.ts",
    "build": "bunx tsc",
    "start": "bun run dist/main.js",
    "test": "bunx vitest",
    "test:run": "bunx vitest run",
    "test:ui": "bunx vitest --ui",
    "test:coverage": "bunx vitest run --coverage",
    "typecheck": "bunx tsc --noEmit",
    "lint": "bunx ultracite check",
    "lint:fix": "bunx ultracite fix",
    "format": "bunx ultracite fix",
    "prepare": "bunx husky"
  },
  "dependencies": {
    "@effect/platform": "^0.73.0",
    "@effect/platform-node": "^0.73.0",
    "dotenv": "^16.6.1",
    "effect": "^3.8.0",
    "hono": "^4.10.6",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.7",
    "@types/node": "^20.19.25",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "ultracite": "^6.3.6",
    "vitest": "^1.6.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}